{
  "root": true,
  "extends": [
    //"eslint:recommended",
    //"plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": ["./tsconfig.json"] },
  "plugins": [
    //"@typescript-eslint",
    "redos"
  ],
  "rules": {
    "redos/no-vulnerable": [
      "error",
      {
        "ignoreErrors": false,
        "maxPatternSize": 3000,
        "maxRepeatCount": 256,
        "maxSimpleRepeatCount": 256,
        "attackTimeout": null,
        "incubationTimeout": null,
        "recallTimeout": null,
        "seedingTimeout": null,
        "timeout": 1e6
      }
    ]
  },
  "ignorePatterns": [
    "**/*.test.ts"
  ]
}
