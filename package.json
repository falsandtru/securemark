{
  "name": "securemark",
  "version": "0.268.1",
  "description": "Secure markdown renderer working on browsers for user input data.",
  "private": true,
  "homepage": "https://github.com/falsandtru/securemark",
  "repository": {
    "type": "git",
    "url": "https://github.com/falsandtru/securemark"
  },
  "keywords": [
    "markdown",
    "latex"
  ],
  "types": "./index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "index.*",
    "src",
    "test",
    "*.ts",
    "*.js",
    "*.json",
    "*.map",
    "*.md",
    "NOTICE",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/dompurify": "2.4.0",
    "@types/jquery": "3.5.16",
    "@types/mathjax": "0.0.37",
    "@types/mocha": "10.0.1",
    "@types/power-assert": "1.5.8",
    "@types/prismjs": "1.26.0",
    "@typescript-eslint/parser": "^5.53.0",
    "babel-loader": "^9.1.2",
    "babel-plugin-unassert": "^3.2.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.35.0",
    "eslint-plugin-redos": "^4.4.5",
    "eslint-webpack-plugin": "^4.0.0",
    "glob": "^8.1.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-mocha": "^2.0.1",
    "karma-power-assert": "^1.0.0",
    "mocha": "^10.2.0",
    "npm-check-updates": "^16.7.9",
    "semver": "^7.3.8",
    "spica": "0.0.719",
    "ts-loader": "^9.4.2",
    "typed-dom": "^0.0.316",
    "typescript": "4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0"
  },
  "scripts": {
    "update": "ncu -u && npm i --no-shrinkwrap && bundle update",
    "dev": "concurrently \"webpack --env mode=test -w\" \"karma start --auto-watch\" \"webpack --env mode=dist -w --output-path ./gh-pages/assets/dist\" \"bundle exec jekyll serve -s ./gh-pages -d ./gh-pages/_site --incremental\"",
    "test": "webpack --env mode=test && karma start --single-run --concurrency 1 --reporters dots,coverage",
    "lint": "webpack --env mode=lint",
    "bench": "webpack --env mode=bench && karma start --single-run --concurrency 1",
    "dist": "webpack --env mode=dist"
  },
  "author": "falsandtru",
  "license": "UNLICENSED"
}
